body {
  margin:0px;
  padding:0px;
  background-color: black;
  display:flex;
  align-items:center;
  justify-content:center;
}

#message {
  text-align: center;
}
#ifr {
  width:100%;
  height:90%;
  min-height:95vh;
  display:block;
  border:0px;
  border-color:transparent;
}
#align {
  display: none;
  flex-direction: column;
  width:100%;
  height:100%;
}
#nav {
  min-height:5vh;
  height:100%;
  width:100%;
  display:none;
  align-items:center;
  justify-content:center;
}

span {
  color:white;
  font-family:'Poppins';
}
